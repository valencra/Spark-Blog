{{#partial "content"}}
    <header>
        <div class="container">
            <div class="site-header">
                <a class="logo" href="/">SparkBlog</a>
                <a class="new-entry button button-round" href="new.html"><i class="material-icons">create</i></a>
            </div>
        </div>
    </header>
    <section>
        <div class="container">
            <div class="entry-list single">
                <article>
                    <h1>{{ entry.title }}</h1>
                    <time datetime="{{ entry.dateAttribute }}">{{ entry.dateText }}</time>
                    <br>
                    <ul class="tags">
                        {{#each entry.tags}}
                            <li><div>{{ this }}</div></li>
                        {{/each}}
                    </ul>
                    <div class="entry">
                        <p>{{ entry.body }}</p>
                        <p><a class="link" href="edit.html">Edit Entry</a></p>
                    </div>
                </article>
            </div>
        </div>
    </section>
    <section class="entry-comments">
        <div class="container">
            <h2>Comments</h2>
            {{#each entry.comments}}
                <div class="comment">
                    <strong>{{ author }}</strong>
                    <time datetime="{{ dateAttribute }}">{{ dateText }}</time>
                    <p>{{ body }}</p>
                </div>
            {{/each}}
            <div class="new-comment">
                <form>
                    <label for="name"> Name</label>
                    <input type="text" name="name"><br>
                    <label for="comment">Comment</label>
                    <textarea rows="5" name="comment"></textarea>
                    <input type="submit" value="Post Comment" class="button">
                </form>
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}