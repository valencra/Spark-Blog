{{#partial "content"}}
    <section>
        <div class="container">
            <div class="edit-entry">
                <h2 class="edit-header">Edit Entry</h2>
                <form class="edit-delete" action="/delete/entries/{{ entry.slug }}" method="post">
                    <input type="submit" value="Delete Entry" class="button">
                </form>
                <form action="/edit/entries/{{ entry.slug }}" method="post">
                    <label for="title"> Title</label>
                    <input type="text" name="title" value="{{ entry.title }}"><br>
                    <label for="entry">Entry</label>
                    <textarea rows="5" name="body">{{ entry.body }}</textarea>
                    <input type="submit" value="Save Entry" class="button">
                    <a href="/" class="button button-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}